{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "ht-angular": [
        "../libs/ht-angular/index"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "index.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  }
}
