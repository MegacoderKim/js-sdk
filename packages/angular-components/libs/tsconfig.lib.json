{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "ht-angular": [
        "./ht-angular/index"
      ],
      "@angular/elements": [
        "@angular/elements"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "index.ts"
  ]
}
