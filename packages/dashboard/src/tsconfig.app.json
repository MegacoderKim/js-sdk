{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "mapRoot": "./",
    "module": "es2015",
    "outDir": "../out-tsc/app",
    "paths": {
      "ht-angular": [
        "../../angular-components/libs/ht-angular/index"
      ],
      "date-fns": [
        "../node_modules/date-fns"
      ],
      "rxjs/*": [
        "../../angular-components/node_modules/rxjs/*"
      ],
      "ht-client": [
        "../../angular-components/node_modules/ht-client"
      ],
      "ht-api": [
        "../../angular-components/node_modules/ht-api"
      ],
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  }
}
